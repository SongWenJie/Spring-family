<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.coderfocus.mybatisdynamicsqldemo.mapper.BookMapper">

    <resultMap id="bookMap" type="com.coderfocus.mybatisdynamicsqldemo.entity.Book">
        <id property="id" column="id"/>
        <result property="name" column="book_name"/>
        <result property="author" column="author"/>
        <result property="price" column="price"/>
    </resultMap>

    <select id="getBooks" resultMap="bookMap">
      select * from t_book
      <where>
          <if test="name!=null">
              and book_name = #{name}
          </if>
          <if test="price!=null and price != 0">
              and price > #{price}
          </if>
      </where>
    </select>

    <select id="getBooks2" resultMap="bookMap">
        select * from t_book
        <where>
            <choose>
                <when test="name!=null">
                    and book_name = #{name}
                </when>
                <when test="price!=null and price != 0">
                    and price > #{price}
                </when>
                <otherwise>
                    and author = #{author}
                </otherwise>
            </choose>
        </where>
    </select>


</mapper>